{
  "compilerOptions": {
    "outDir": "./build",
    "strict": false,
    "target": "ES2019",
    "lib": [
      "ES2019"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noEmit": false,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
  }
}
